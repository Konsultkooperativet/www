        <h2 class="text-center text-lg text-uppercase my-0">
        	<strong>Spr√•k</strong>
        </h2>
        <hr class="divider">
	</header>
  <section id="languages">
    {{#each resume.languages}}
    <div class="display">
      {{#if language}}
      <h3 class="language">
        {{language}}
      </h3>
      {{/if}}
