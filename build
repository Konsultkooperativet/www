set -x

cd cv

npm install -g resume-cli
npm install handlebars
npm install moment

cd jsonresume-theme-konsultcoop
npm install -d
cd ..

for f in consultants/*.json; 
do 
	echo "Processing $f file.."; 

	cp consultants/$f resume.json
	resume export --theme konsultcoop $f.html
	cp $f.html ../public/cv/$f.html
done

